<toolSet name="Format">
  <tool name="Stylelint Fix" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="false" showConsoleOnStdOut="true" showConsoleOnStdErr="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$ProjectFileDir$/elevation/node_modules/stylelint/bin/stylelint.js" />
      <option name="PARAMETERS" value="&quot;$FilePath$&quot; --fix" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$/elevation/node_modules/stylelint/bin" />
    </exec>
  </tool>
  <tool name="Fix Styles" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="false" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" />
      <option name="PARAMETERS" value="find . | grep -E '.vue$' | xargs stylelint --fix" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
</toolSet>